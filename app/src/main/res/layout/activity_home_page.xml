
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.edlogiq.neurongym.neurongym.LanguageSelect">


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  >



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homepage">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
       android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="475dp"
            android:layout_height="170dp"
            android:background="@drawable/home_page_logo"
            android:elevation="8dp"
            android:orientation="horizontal">





        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout2"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/gamelay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/buttonFloat_game_menu"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_home_game"
                            android:elevation="5dp" >
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/game"/>
                    </LinearLayout>

                        <TextView
                            android:layout_below="@+id/buttonFloat_game_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="@color/gray"
                            android:layout_centerHorizontal="true"
                            android:text="@string/games"/>

                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearLayout6"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/brainflashlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/buttonFloat_brain_profile"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_home_brainprofile"
                            android:elevation="5dp" >

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/brain_profile"/>
                    </LinearLayout>

                        <TextView
                            android:layout_below="@+id/buttonFloat_brain_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="@color/gray"
                            android:layout_centerHorizontal="true"
                            android:text="@string/brain_profile"/>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/relativeLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/comparelay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/buttonFloat_comparision"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_home_compare"
                            android:elevation="5dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/compare"/>
                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/buttonFloat_comparision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="@color/gray"
                            android:layout_centerHorizontal="true"
                            android:text="@string/compare"/>
                     </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/relativeLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/leaderbordlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/buttonFloat_leaders_board"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_home_leaderbord"
                            android:elevation="5dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/leaders_board"/>
                            </LinearLayout>

                        <TextView
                            android:layout_below="@+id/buttonFloat_leaders_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="@color/gray"
                            android:layout_centerHorizontal="true"
                            android:text="@string/leadersbord"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

    </FrameLayout>


    <!-- Slider menu Layoute -->


<LinearLayout
android:id="@+id/left_drawer"
android:layout_width="240dp"
android:layout_height="match_parent"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
android:background="#fff"
android:orientation="vertical">


<LinearLayout
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:textStyle="bold"
        />
</LinearLayout>

<RelativeLayout
    android:id="@+id/relativeLayout0"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="1dp"
    android:layout_below="@+id/relativeLayout2">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#bdbdbd" />
</RelativeLayout>


<LinearLayout
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/homelayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/cyan">
        <ImageView
            android:id="@+id/homeimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home"/>
    </LinearLayout>
    <TextView
        android:id="@+id/hometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:text="@string/home"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/gamelayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/red">
        <ImageView
            android:id="@+id/gameimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/game"/>
    </LinearLayout>
    <TextView
        android:id="@+id/gametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:text="@string/games"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/brain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/brainlayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/blue">
        <ImageView
            android:id="@+id/brainimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/brain_profile"/>
    </LinearLayout>
    <TextView
        android:id="@+id/braintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:text="@string/brain_flash"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/compare"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/comparelayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/green">
        <ImageView
            android:id="@+id/compareimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/compare"/>
    </LinearLayout>
    <TextView
        android:id="@+id/compatetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:text="@string/compare"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/leaderbord"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/leaderbordlayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/pink">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/leaders_board"/>
    </LinearLayout>
    <TextView
        android:id="@+id/leaderbordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="@string/leadersbord"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/friends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/friendlayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/cyan">
        <ImageView
            android:id="@+id/friendimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/friends"/>
    </LinearLayout>
    <TextView
        android:id="@+id/friendtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="@string/friends"/>
</LinearLayout>

<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="1dp"
    android:layout_below="@+id/relativeLayout2">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#bdbdbd" />
</RelativeLayout>

<LinearLayout
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/settinglayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/violet">
        <ImageView
            android:id="@+id/settingimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/settings"/>
    </LinearLayout>
    <TextView
        android:id="@+id/settingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:text="@string/setting"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/language"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/languagelayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/grey">
        <ImageView
            android:id="@+id/languageimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/language_icon"/>
    </LinearLayout>
    <TextView
        android:id="@+id/languagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="@string/language"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/logout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/logoutlayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/circle_brown">
        <ImageView
            android:id="@+id/logoutimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/exit_game"/>
    </LinearLayout>
    <TextView
        android:id="@+id/logouttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="@string/logout"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/exit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/btn_state_rect"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/exitlayoute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/orange">
        <ImageView
            android:id="@+id/exitimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/exit"/>
    </LinearLayout>
    <TextView
        android:id="@+id/exittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:textSize="20dp"
        android:text="@string/exit"/>
</LinearLayout>

</LinearLayout>
    </android.support.v4.widget.DrawerLayout>

