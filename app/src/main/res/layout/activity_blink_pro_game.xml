<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/blinkprogame"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#00bcd4">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sign_in" />

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/life_brainred" />

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/life_brainred" />

            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/life_brainred" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/score_icon" />

            <TextView
                android:id="@+id/scoretextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="ab"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutepause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/pause"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/multi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/toplayout">



        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/process_bar"
            android:max="100"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/processlayoute1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/progressBar"
            android:gravity="center"
            android:background="@drawable/circle_text_cyan">
            <TextView
                android:id="@+id/processtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="x1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/processlayoute2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/circle_text">
            <TextView
                android:id="@+id/processtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:text="x2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/processlayoute3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/progressBar"
            android:gravity="center"
            android:background="@drawable/circle_text">
            <TextView
                android:id="@+id/processtext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:text="x3"/>
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/boxlayout"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/multi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/blink_aim"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imageViewtext"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/righttick"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tick_cross"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>

    <ImageView
        android:id="@+id/imageright"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tick"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/wrongcross"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ring_cross"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>

    <ImageView
        android:id="@+id/imagewrong"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/cross"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/boxlayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rowlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rowlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/button9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageviewbtn12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <!-- Pause       Layout-->


    <RelativeLayout
        android:id="@+id/pausepopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resume"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_state"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/resumeimageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/resume_icon" />

                <TextView
                    android:id="@+id/resumetextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/resume"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/replay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_state"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/replayimageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/replay_icon" />

                <TextView
                    android:id="@+id/replaytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/replay"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_state"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/instructionsimageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/instruction_icon" />

                <TextView
                    android:id="@+id/instructionstextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/instrections"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/sound"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:background="@drawable/btn_state"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/soundimageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/sound_on_icon" />

                <TextView
                    android:id="@+id/soundtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/sound"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/exitgame"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_state"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/exitgameimageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/exit_game" />

                <TextView
                    android:id="@+id/exitgametextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/exit_game"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
