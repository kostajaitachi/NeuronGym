<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hadding_bar"
    android:orientation="horizontal"
    android:padding="3dp">

    <ImageView
        android:id="@+id/left_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/congnitive_change_up" />

    <TextView
        android:id="@+id/text_main_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/left_pic"
        android:layout_toRightOf="@+id/left_pic"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

</RelativeLayout>
